{  
    "manifest_version":2,
    "name":"Chord Transposer",
    "description":"Chord Transposer",
    "version":"0.0.1",
    "offline_enabled":true,
    "background":{  
        "persistent":false,
        "scripts":[  
            "js/src/background.js"
        ]
    },
    "content_scripts":[  
        {  
            "matches":[  
                "http://*/*"
            ],
            "js":[  
                "js/vendor/jquery.js",
                "js/vendor/jquery.getPath.js",
                "js/src/content.js"
            ],
            "css":[  
                "css/content.css"
            ],
            "run_at":"document_idle",
            "all_frames":false
        }
    ],
    "page_action":{  
        "default_title":"Chord Transposer",
        "default_icon":"icon.png",
        "default_popup":"popup.html"
    }
}